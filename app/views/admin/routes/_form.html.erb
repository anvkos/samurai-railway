<%= form_for([:admin, route], html: { style: "display: #{hidden ? 'none' : 'block'}"} ) do |f| %>
  <%= render 'common/errors', resource: route %>

  <div class="field form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :railway_station_ids, 'Stations' %>
    <%= f.collection_select :railway_station_ids, RailwayStation.all, :id, :title, {}, { multiple: true, class: "form-control" } %>
  </div>

  <div class="actions form-group">
    <%= f.submit t('.submit', action: route.new_record? ? t('common.create') : t('common.edit')), class: "btn btn-success" %>
  </div>
<% end %>
