<tr>
  <td><%= ticket.train.number %></td>
  <td><%= ticket.start_station.title %></td>
  <td><%= ticket.end_station.title %></td>
  <td><%= ticket.user.email %></td>
  <td>
    <%= ticket.passenger_name %><br>
    <%= ticket.passenger_passport %>
  </td>
  <td>
    <%= link_to t('common.show'), [:admin, ticket] %>
    <%= link_to t('common.edit'), edit_admin_ticket_path(ticket) %>
    <%= link_to t('common.destroy'), [:admin, ticket], method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
