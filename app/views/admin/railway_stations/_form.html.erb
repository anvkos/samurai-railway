<div class="row">
<div class="col-md-8 col-md-offset-1">
<%= form_for([:admin, railway_station] ) do |f| %>
  <%= render 'common/errors', resource: railway_station %>

  <div class="field form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="actions form-group">
    <%= f.submit t('.submit', action: railway_station.new_record? ? t('common.create') : t('common.edit')), class: "btn btn-success" %>
  </div>
<% end %>
</div>
</div>
